//Staircase Problem Recursive Solution


public class Solution {

   public static int nSteps(int steps) {
	   if (steps<0) {
		   return 0;
	   }
	   if (steps==0||steps==1) {
		   return 1;
	   }
	   return (steps-1)+(steps-2)+(steps-3);
   }
   public static void main(String[] args) {
	  
	   System.out.print(nSteps(4));
   }
}

